@using Todo_Pallets.Models;

@{
	ViewBag.Titulo = "Comprar";
	ViewBag.activoComprar = "actual";
}


<section>
	<div class="row">
		<div id="columna-descripcion-acerca">

			<form id="formulario-compra" action="/Esp/MandarCompra" method="get">
				<fieldset id="formulario">

					<div class="col-sm-6 columna">
						<h1 id="descripcion">¡A comprar se ha dicho!</h1>

						<p class="parrafo-descripcion">A continuación le presentamos un formulario para completar con sus datos personales, para que puedas comprar los productos que te interesan.</p>

						<p class="parrafo-descripcion">Recuerde manejar con discreción sus datos de tarjeta!</p>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input type="text"
											 name="nombre"
											 class="form-control"
											 placeholder="Tu nombre"
											 maxlength="25"
											 pattern="^[A-Za-zñÑ_]{3,25}$"
											 oninvalid="setCustomValidity('Por favor, complete este campo solo con su nombre de pila (de 3 a 25 letras, sin espacios, números o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 autofocus
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input type="text"
											 name="apellido"
											 class="form-control"
											 placeholder="Tu apellido"
											 maxlength="25"
											 pattern="^[A-Za-zñÑ_]{3,25}$"
											 oninvalid="setCustomValidity('Por favor, complete este campo con su verdadero apellido (de 3 a 25 letras, sin espacios, números o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input id="edad-usuario"
											 type="text"
											 name="edad"
											 class="form-control"
											 placeholder="Tu edad"
											 maxlength="3"
											 pattern="([6-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|6[0-9]|7[0-9]|8[0-9]|9[0-9]|10[0-9]|11[0-9]|12[0])"
											 oninvalid="setCustomValidity('Por favor, complete este campo solo con su edad actual. Solo se admite de 6 años en adelante (número de 1 a 3 cifras, sin espacios, letras o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-envelope"></span>
								</span>
								<input type="email"
											 name="email"
											 class="form-control"
											 placeholder="Tu email"
											 maxlength="40"
											 required />
							</div>
						</div>

						<div class="checkbox">
							<label>
								<input type="checkbox" name="ofertasNovedades" value="SI" checked="checked" />
								<p id="checkbox-descripcion">Quiero recibir las últimas ofertas y novedades en mi casilla de email.</p>
							</label>
						</div>

					</div>

					<div class="col-sm-6 columna">

						<div id="lista-productos" class="form-group has-feedback">
							<p class="parrafo-descripcion">¿Cuáles productos desea comprar?*</p>
							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-shopping-cart"></span>
								</span>

								<select class="form-control"
												name="seleccion-productos"
												size="10"
												required
												multiple>
									<option value="top-1">El primero, el del top n°1</option>
									<option value="top-2">El del top n°2</option>
									<option value="top-3">El del top n°3</option>
									<option value="top-4">El del top n°4</option>
									<option value="top-5">El del top n°5</option>
									<option value="top-6">El del top n°6</option>
									<option value="top-7">El del top n°7</option>
									<option value="top-8">El del top n°8</option>
									<option value="top-9">El del top n°9</option>
									<option value="top-10">El último, el del top n°10</option>
								</select>

							</div>
							<p class="checkbox-descripcion"><b>*</b> Puede usar las teclas <i>Ctrl</i> o <i>Shift</i> para seleccionar varios productos.</p>
						</div>

						<button id="boton-enviar-compra" type="submit" class="btn btn-default">Comprar!</button>

					</div>

				</fieldset>
			</form>

		</div>
	</div>
</section>

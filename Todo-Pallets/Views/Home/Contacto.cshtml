@{
	ViewBag.Titulo = "Contacto";
	ViewBag.activoContacto = "actual";
}


<section>
	<div class="row">
		<div id="columna-descripcion-contacto">
			<div class="col-sm-6 columna">
				<h1 id="descripcion">Contacto:</h1>

				<p class="parrafo-descripcion">Nuestro local se encuentra en Av. Maipú al 3801, en pleno centro comercial de la localidad de Olivos, partido de Vicente Lopez, Buenos Aires, Argentina.</p>

				<p class="parrafo-descripcion">Nuestros horarios de atención son:</p>

				<table class="table table-hover" id="tabla-horarios">
					<tr class="fila-principal-tabla">
						<th>Días de Semana</th>
						<th>Horarios</th>
					</tr>

					<tr>
						<td>Lunes a Viernes</td>
						<td>De 9:00 a 12:00 hs. y de 16:00 a 19:00 hs.</td>
					</tr>

					<tr>
						<td>Sábados</td>
						<td>De 9:00 a 12:00 hs.</td>
					</tr>
				</table>

				<h1 id="descripcion">Mapa:</h1>

				<div id="mapa-ubicacion">
					<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3288.0692705235856!2d-58.495978!3d-34.5011281!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bcb1103e56bad9%3A0x34e95724bf9042f1!2sAv.+Maip%C3%BA+3800%2C+La+Lucila%2C+Buenos+Aires!5e0!3m2!1ses!2sar!4v1442206398275" width="460" height="400" frameborder="0" style="border:0" allowfullscreen></iframe>
				</div>
			</div>

			<div class="col-sm-6 columna">
				<h1 id="descripcion">Formulario:</h1>

				<p class="parrafo-descripcion">¿Tiene alguna duda acerca de nuestros productos? ¿O quiere preguntarnos sobre cualquier otra cosa ? Envienos su consulta llenando el siguiente formulario y nos contactaremos con usted a la mayor brevedad:</p>

				<form id="formulario-contacto" action="/Mensaje/MandarMensaje" method="get">
					<fieldset id="formulario">

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input type="text"
											 name="nombre"
											 class="form-control"
											 placeholder="Tu nombre"
											 maxlength="25"
											 pattern="^[A-Za-zñÑ_]{3,25}$"
											 oninvalid="setCustomValidity('Por favor, complete este campo solo con su nombre de pila (de 3 a 25 letras, sin espacios, números o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 autofocus
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input type="text"
											 name="apellido"
											 class="form-control"
											 placeholder="Tu apellido"
											 maxlength="25"
											 pattern="^[A-Za-zñÑ_]{3,25}$"
											 oninvalid="setCustomValidity('Por favor, complete este campo con su verdadero apellido (de 3 a 25 letras, sin espacios, números o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-user"></span>
								</span>
								<input id="edad-usuario"
											 type="text"
											 name="edad"
											 class="form-control"
											 placeholder="Tu edad"
											 maxlength="3"
											 pattern="([6-9]|1[0-9]|2[0-9]|3[0-9]|4[0-9]|5[0-9]|6[0-9]|7[0-9]|8[0-9]|9[0-9]|10[0-9]|11[0-9]|12[0])"
											 oninvalid="setCustomValidity('Por favor, complete este campo solo con su edad actual. Solo se admite de 6 años en adelante (número de 1 a 3 cifras, sin espacios, letras o caracteres especiales).')"
											 onchange="try{setCustomValidity('')}catch(e){}"
											 required />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-envelope"></span>
								</span>
								<input type="email"
											 name="email"
											 class="form-control"
											 placeholder="Tu email"
											 maxlength="40"
											 required />
							</div>
						</div>

						<div id="email-padres" class="form-group has-feedback ">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-envelope"></span>
								</span>
								<input type="email"
											 name="emailPadres"
											 class="form-control"
											 placeholder="El email de cualquiera de tus padres o tutores" 
											 maxlength="25" />
							</div>
						</div>

						<div class="form-group has-feedback">

							<div class="inner-addon left-addon input-group">
								<span class="input-group-addon">
									<span class="glyphicon glyphicon-pencil"></span>
								</span>
								<textarea class="form-control" rows="3"
													type="text"
													name="consulta"
													placeholder="Y tu consulta! (500 caracteres max.)"
													maxlength="500"
													required></textarea>
							</div>
						</div>

						<div class="checkbox">
							<label>
								<input type="checkbox" name="ofertasNovedades" value="SI" checked="checked" />
								<p id="checkbox-descripcion">Quiero recibir las últimas ofertas y novedades en mi casilla de email.</p>
							</label>
						</div>

						<button type="submit" class="btn btn-default">Enviar</button>

					</fieldset>
				</form>

			</div>
		</div>
	</div>
</section>